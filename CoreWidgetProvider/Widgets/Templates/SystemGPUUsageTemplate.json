{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "GPU",
      "size": "small",
      "style": "Heading",
      "weight": "Lighter",
      "wrap": true
    },
    {
      "type": "Image",
      "url": "${gpuGraphUrl}",
      "height": "100px",
      "width": "268px"
    },
    {
      "text": "%GPUUsage_Widget_Template/GPU_Usage%: ${gpuUsage}",
      "type": "TextBlock",
      "size": "large"
    },
    {
      "text": "%GPUUsage_Widget_Template/GPU_Name%: ${gpuName}",
      "type": "TextBlock"
    },
    {
      "text": "%GPUUsage_Widget_Template/GPU_Temperature%: ${gpuTemp}",
      "type": "TextBlock"
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "%GPUUsage_Widget_Template/Previous_GPU%",
      "verb": "PrevItem"
    },
    {
      "type": "Action.Execute",
      "title": "%GPUUsage_Widget_Template/Next_GPU%",
      "verb": "NextItem"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}
