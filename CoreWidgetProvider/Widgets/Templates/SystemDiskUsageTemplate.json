{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Image",
      "url": "${diskGraphUrl}",
      "height": "100px",
      "width": "268px"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "text": "%DiskUsage_Widget_Template/Read%",
              "type": "TextBlock",
              "spacing": "none",
              "size": "small",
              "isSubtle": true
            },
            {
              "text": "${diskRead}",
              "type": "TextBlock",
              "size": "large"
            }
          ]
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "%DiskUsage_Widget_Template/Write%",
              "size": "small",
              "spacing": "none",
              "isSubtle": true,
              "horizontalAlignment": "right"
            },
            {
              "text": "${diskWrite}",
              "type": "TextBlock",
              "size": "large",
              "horizontalAlignment": "right"
            }
          ]
        }
      ]
    },
    {
      "text": "%DiskUsage_Widget_Template/Name%",
      "type": "TextBlock",
      "isSubtle": true
    },
    {
      "text": "${diskName}",
      "type": "TextBlock"
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "%DiskUsage_Widget_Template/Next_Disk%",
      "verb": "NextItem"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}
