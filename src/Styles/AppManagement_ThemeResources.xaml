<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <x:Double x:Key="AppManagementIconDisabledOpacity">0.4</x:Double>

    <Style x:Key="AppManagementTitleTextBlock" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlockStyle}">
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimary}" />
        <Setter Property="MaxLines" Value="1" />
    </Style>

    <Style x:Key="AppManagementDescriptionTextBlock" TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondary}" />
        <Setter Property="MaxLines" Value="1" />
    </Style>
</ResourceDictionary>
