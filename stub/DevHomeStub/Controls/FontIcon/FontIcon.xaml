<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DevHome.Stub.Controls">

    <Style TargetType="{x:Type local:FontIcon}">
        <Setter Property="FontFamily" Value="{DynamicResource IconFont}" />
        <Setter Property="Size" Value="{DynamicResource FontSize16}" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FontIcon}">
                    <TextBlock
                        x:Name="PartIconText"
                        FontFamily="{TemplateBinding FontFamily}"
                        FontSize="{TemplateBinding Size}"
                        FontStretch="Normal"
                        FontStyle="Normal"
                        FontWeight="Normal"
                        Foreground="{TemplateBinding Foreground}"
                        Text="{TemplateBinding CodeString}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
