<Application
    x:Class="DevHome.Stub.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DevHome.Stub.Controls"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <controls:ThemedResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Accents/Normal.xaml" />
                <ResourceDictionary Source="/Styles/Fonts.xaml" />
                <ResourceDictionary Source="/Styles/Buttons.xaml" />
                <ResourceDictionary Source="/Themes/Generic.xaml" />
                <ResourceDictionary Source="/Styles/Hyperlink.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style BasedOn="{StaticResource FlatButtonDarkBorderlessStyle}" TargetType="Button" />

            <controls:ThemedResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default" Source="pack://application:,,,/DevHome.Console.Host;component/Styles/Accents/Normal.xaml" />
                <ResourceDictionary x:Key="HighContrast" Source="pack://application:,,,/DevHome.Console.Host;component/Styles/Accents/HighContrast.xaml" />
            </controls:ThemedResourceDictionary.ThemeDictionaries>
        </controls:ThemedResourceDictionary>
    </Application.Resources>
</Application>
