<pg:ToolPage
    x:Class="DevHome.Experiments.Views.ExperimentsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pg="using:DevHome.Common"
    xmlns:exp="using:DevHome.Experiments.ViewModels"
    mc:Ignorable="d">

    <ScrollViewer>
        <ItemsRepeater ItemsSource="ExperimentalFeatures">
            <ItemsRepeater.ItemTemplate>
                <ControlTemplate TargetType="exp:ExperimentalFeature">
                    <ToggleSwitch Header="{x:Bind Id,Mode=OneWay}" IsOn="{x:Bind Enabled,Mode=TwoWay}"/>
                </ControlTemplate>
            </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>    
    </ScrollViewer>
    
</pg:ToolPage>
