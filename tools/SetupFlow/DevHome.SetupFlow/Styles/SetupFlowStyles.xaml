<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CardGridStyle" TargetType="Grid">
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefault}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="CornerRadius" Value="7" />
    </Style>

    <Style x:Key="CardGridPrimaryStyle" TargetType="Grid" BasedOn="{StaticResource CardGridStyle}">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefault}" />
    </Style>

    <Style x:Key="CardGridSecondaryStyle" TargetType="Grid" BasedOn="{StaticResource CardGridStyle}">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorSecondary}" />
    </Style>
    <!-- [location].ttf#[Font family name]-->
    <!-- https://stackoverflow.com/a/52162805/1549689 -->
    <!-- Use https://fontdrop.info/ to see glyphs-->
    <FontFamily x:Key="DevHomeFluentIcons">/Assets/DevHomeFluentIcons.ttf#DevHome Fluent Icons</FontFamily>
</ResourceDictionary>