<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ActionDialogFooterButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="Width" Value="152" />
    </Style>

    <Style x:Key="ActionDialogFooterAccentButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
        <Setter Property="Width" Value="152" />
    </Style>

  <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
    <Setter Property="Margin" Value="0 8"/>
  </Style>
  
    <!--
    TODO UI for the AppManagement page has changed, hence many of the styles in
    this file are deprecated and should be cleaned when the new UI is
    implemented.
    -->
    
    <!-- TODO Deprecated -->
    <x:String x:Key="SegoeFont">Segoe MDL2 Assets</x:String>
    <x:String x:Key="FontIconSource">&#xE77B;</x:String>
    <x:String x:Key="FontIconClose">&#xE711;</x:String>

    <!-- TODO Deprecated -->
    <Style x:Key="CheckBoxNoLabelStyle" TargetType="CheckBox" BasedOn="{StaticResource DefaultCheckBoxStyle}">
        <Setter Property="MinWidth" Value="0" />
    </Style>

    <Style x:Key="PackageCardStyle" TargetType="Grid">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorSecondary}" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <!-- TODO Deprecated -->
    <Style x:Key="PackageLargeCardIconStyle" TargetType="FontIcon">
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondary}" />
        <Setter Property="FontFamily" Value="{StaticResource SegoeFont}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- TODO Deprecated -->
    <Style x:Key="PackageLargeCardImageStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="20" />
    </Style>

    <!-- TODO Deprecated -->
    <Style x:Key="PackageLargeCardSourceTextStyle" TargetType="TextBlock" BasedOn="{StaticResource SetupBaseTextBlockStyle}">
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondary}" />
    </Style>

    <Style x:Key="PackageLargeCardSubTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource SetupBaseTextBlockStyle}">
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondary}" />
    </Style>

    <Style x:Key="PackageLargeCardTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource SetupBaseTextBlockStyle}">
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="PackageSmallCardStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Padding" Value="5" />
    </Style>

    <!-- TODO Deprecated -->
    <Style x:Key="PackageSmallCardImageStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="14" />
        <Setter Property="Height" Value="14" />
    </Style>

    <!-- TODO Deprecated -->
    <Style x:Key="PackageSmallCardIconStyle" TargetType="FontIcon" BasedOn="{StaticResource PackageLargeCardIconStyle}">
        <Setter Property="FontSize" Value="10" />
    </Style>

    <Style x:Key="PackageSmallCardSubTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource PackageLargeCardSubTitleStyle}">
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- TODO Deprecated -->
    <Style x:Key="PackageSmallCardSourceTextStyle" TargetType="TextBlock" BasedOn="{StaticResource PackageLargeCardSourceTextStyle}">
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="PackageSmallCardTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource PackageLargeCardTitleStyle}">
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="SetupBaseTextBlockStyle" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- TODO Deprecated -->
    <Style x:Key="StackPanelFooterButtonsStyle" TargetType="StackPanel">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Padding" Value="20" />
    </Style>

    <Style x:Key="SetupPageSubTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource SetupBaseTextBlockStyle}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style x:Key="SetupPageTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource SetupBaseTextBlockStyle}">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="TextWrapping" Value="NoWrap" />
    </Style>

    <Style x:Key="StackPanelTextItemsStyle" TargetType="StackPanel">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- TODO Deprecated -->
    <Style x:Key="SearchBoxStyle" TargetType="TextBox">
        <Setter Property="Width" Value="150" />
        <Setter Property="CornerRadius" Value="15" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>