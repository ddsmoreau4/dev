<UserControl
    x:Class="DevHome.Common.Windows.WindowTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="OnLoaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="WindowTitleBar" Canvas.ZIndex="1" Height="30" IsHitTestVisible="True" VerticalAlignment="Top">
            <Image Source="/Assets/DevHome.ico" HorizontalAlignment="Left" Width="16" Height="16" />
            <TextBlock x:Name="WindowTitleBarText" Text="Hello world" VerticalAlignment="Center" TextWrapping="NoWrap" Style="{StaticResource CaptionTextBlockStyle}" Margin="28,0,0,0"/>
        </Grid>
        <ContentControl
            Grid.Row="1"
            x:Name="WindowContent"
            IsTabStop="False"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Content="{x:Bind PageContent, Mode=OneWay}" />
    </Grid>
</UserControl>
